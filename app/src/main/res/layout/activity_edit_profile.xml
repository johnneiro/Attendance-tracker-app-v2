<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".EditProfile"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/mcc_rectangle_shape_corners_18dp"
        app:backgroundTint="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-75dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/barlow_bold"
                android:text="EDIT INFORMATION"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scrollbars="vertical"
        android:layout_marginTop="50dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- STREET INPUT TEXT-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Street/Bldg."
                            android:textSize="14sp"
                            android:fontFamily="@font/barlow_regular"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/pink"
                            android:textSize="14sp"
                            android:fontFamily="@font/barlow_regular"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/tbxEditStreet"
                        android:layout_width="175dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/mcc_rectange_shape_corners_5dp"
                        android:fontFamily="@font/barlow_medium"
                        android:hint="e.g. Sampaguita"
                        android:paddingStart="15dp"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <!-- BARANGAY INPUT TEXT-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Barangay"
                            android:textSize="14sp"
                            android:fontFamily="@font/barlow_regular"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/pink"
                            android:textSize="14sp"
                            android:fontFamily="@font/barlow_regular"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/tbxEditBarangay"
                        android:layout_width="175dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/mcc_rectange_shape_corners_5dp"
                        android:fontFamily="@font/barlow_medium"
                        android:hint="e.g. Barangay Olympia"
                        android:paddingStart="15dp"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <!-- CITY INPUT TEXT-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="City"
                            android:textSize="14sp"
                            android:fontFamily="@font/barlow_regular"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/pink"
                            android:textSize="14sp"
                            android:fontFamily="@font/barlow_regular"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/tbxEditCity"
                        android:layout_width="175dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/mcc_rectange_shape_corners_5dp"
                        android:fontFamily="@font/barlow_medium"
                        android:hint="e.g. Taguig City"
                        android:paddingStart="15dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- PROVINCE INPUT TEXT-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Province"
                            android:textSize="14sp"
                            android:fontFamily="@font/barlow_regular"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/pink"
                            android:textSize="14sp"
                            android:fontFamily="@font/barlow_regular"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/tbxEditProvince"
                        android:layout_width="175dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/mcc_rectange_shape_corners_5dp"
                        android:fontFamily="@font/barlow_medium"
                        android:hint="e.g. Metro Manila"
                        android:paddingStart="15dp"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- CONTACT INPUT TEXT-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contact Number"
                            android:textSize="14sp"
                            android:fontFamily="@font/barlow_regular"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/pink"
                            android:textSize="14sp"
                            android:fontFamily="@font/barlow_regular"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/tbxEditContactNumber"
                        android:background="@drawable/mcc_rectange_shape_corners_5dp"
                        android:layout_width="175dp"
                        android:layout_height="47dp"
                        android:hint="09123456789"
                        android:textSize="14sp"
                        android:inputType="number"
                        android:maxLength="11"
                        android:fontFamily="@font/barlow_medium"
                        android:paddingStart="15dp"/>
                </LinearLayout>

                <!-- EMAIL INPUT TEXT-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="14sp"
                            android:fontFamily="@font/barlow_regular"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/pink"
                            android:textSize="14sp"
                            android:fontFamily="@font/barlow_regular"/>
                    </LinearLayout>

                    <EditText
                        android:background="@drawable/mcc_rectange_shape_corners_5dp"
                        android:id="@+id/tbxEditEmail"
                        android:layout_width="175dp"
                        android:layout_height="47dp"
                        android:enabled="false"
                        android:hint="email@gmail.com"
                        android:inputType="textEmailAddress"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_medium"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"/>
                </LinearLayout>

            </LinearLayout>


            <!-- GOOGLE DRIVE INPUT TEXT-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Google Drive Link"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_regular"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/pink"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_regular"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/tbxEditGoogleDriveLink"
                    android:background="@drawable/mcc_rectange_shape_corners_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:hint="e.g. drive.google.com/drive/u/1/folder"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_medium"
                    android:paddingStart="15dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/mcc_rectangle_shape_corners_7dp"
            app:backgroundTint = "@color/green"
            android:textSize="18sp"
            android:fontFamily="@font/barlow_bold"
            android:text="SAVE"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/mcc_rectangle_shape_corners_7dp"
            app:backgroundTint = "@color/pink"
            android:textSize="18sp"
            android:fontFamily="@font/barlow_bold"
            android:text="CANCEL"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>