<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".EmailVerificationFP"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/mcc_rectangle_shape_corners_18dp"
        app:backgroundTint="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/barlow_bold"
                android:text="EMAIL VERIFICATION"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/mcc_email_verification_image"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the verification code weâ€™ve\njust sent on your email address"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/barlow_regular"
            android:textSize="14sp"
            android:textColor="@color/gray"/>

        <!-- EMAIL INPUT TEXT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Code:"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/pink"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"/>
            </LinearLayout>

            <EditText
                android:background="@drawable/mcc_rectange_shape_corners_5dp"
                android:id="@+id/tbxVerificationCode"
                android:layout_width="350dp"
                android:layout_height="47dp"
                android:hint="Enter the verification code sent in your email"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_medium"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_gravity="center"/>
        </LinearLayout>

            <Button
                android:id="@+id/btnSubmitCode"
                android:layout_width="310dp"
                android:layout_height="48dp"
                android:background="@drawable/mcc_rectangle_shape_corners_7dp"
                app:backgroundTint = "@color/green"
                android:textSize="18sp"
                android:fontFamily="@font/barlow_bold"
                android:text="SUBMIT"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/txtResendCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get new code?"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/barlow_bold"
                android:textSize="14sp"
                android:textColor="@color/gray"/>
    </LinearLayout>

</LinearLayout>