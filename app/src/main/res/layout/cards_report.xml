<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stateListAnimator="@null"
    android:background="@drawable/mcc_rectangle_shape_corners_7dp"
    android:backgroundTint="@color/green"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:id="@+id/report_status_cardview"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stateListAnimator="@null"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:stateListAnimator="@null"
            android:orientation="vertical">

            <TextView
                android:id="@+id/report_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/barlow_semibold"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/report_card_date_submitted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/barlow_regular"
                android:text="Date Submitted"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/report_card_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/barlow_regular"
                android:text="Ticket Number"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/report_card_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="Status"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>