<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/register_page_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:transitionName="transition-header">

        <ImageView
            android:id="@+id/register_wave_shape_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-200dp"
            android:background="@drawable/mcc_login_wave_shape" />


        <ImageView
            android:id="@+id/register_undraw_image"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginTop="-350dp"
            app:srcCompat="@drawable/mcc_register_undraw" />

        <TextView
            android:id="@+id/register_sigup_text"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginTop="-100dp"
            android:fontFamily="@font/barlow_medium"
            android:layout_gravity="center"
            android:text="SIGN-UP"
            android:textColor="@color/black"
            android:textSize="46sp" />

        <TextView
            android:id="@+id/register_back_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fa_solid"
            android:text="\uf060"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:paddingStart="20dp"
            android:layout_marginTop="-300dp"
            android:elevation="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">

            <!-- SHIFT START INPUT TEXT-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_regular"
                        android:text="Shift Start"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_regular"
                        android:text="*"
                        android:textColor="@color/pink"
                        android:textSize="14sp" />
                </LinearLayout>

                <Spinner
                    android:paddingStart="10dp"
                    android:id="@+id/register_start_shift_spinner"
                    android:layout_width="170dp"
                    android:layout_gravity="center"
                    android:layout_height="48dp"
                    android:background="@drawable/mcc_dropdown_layout"
                    android:spinnerMode="dialog"/>
            </LinearLayout>


            <!-- SHIFT END INPUT TEXT-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_regular"
                        android:text="Shift End"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_regular"
                        android:text="*"
                        android:textColor="@color/pink"
                        android:textSize="14sp" />
                </LinearLayout>

                <Spinner
                    android:paddingStart="10dp"
                    android:id="@+id/register_end_shift_spinner"
                    android:layout_width="170dp"
                    android:layout_gravity="center"
                    android:layout_height="48dp"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:background="@drawable/mcc_dropdown_layout"
                    android:spinnerMode="dialog"/>
            </LinearLayout>


        </LinearLayout>

        <!-- OJT SCHEDULE INPUT TEXT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OJT Schedule"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/pink"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"/>
            </LinearLayout>

            <Spinner
                android:paddingStart="10dp"
                android:id="@+id/register_ojt_schedule_spinner"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="48dp"
                android:background="@drawable/mcc_dropdown_layout"
                android:spinnerMode="dialog"/>
        </LinearLayout>

        <!-- GOOGLE DRIVE LINK INPUT TEXT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_regular"
                    android:text="Google Drive Link"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_regular"
                    android:text="*"
                    android:textColor="@color/pink"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/register_gdrive_textbox"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/mcc_rectange_shape_corners_5dp"
                android:fontFamily="@font/barlow_medium"
                android:hint="e.g. drive.google.com/drive/u/1/folder"
                android:paddingStart="15dp"
                android:textSize="14sp"
                android:fitsSystemWindows="true"/>
        </LinearLayout>


        <!-- GOOGLE DRIVE LINK INPUT TEXT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_regular"
                    android:text="Upload your 2x2 photo:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_regular"
                    android:text="*"
                    android:textColor="@color/pink"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/register_photo_textbox"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/ic_baseline_image_24"
                android:paddingEnd="20dp"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/mcc_rectange_shape_corners_5dp"
                android:fontFamily="@font/barlow_medium"
                android:hint="e.g. some_photo.jpg"
                android:paddingStart="15dp"
                android:textSize="14sp" />
        </LinearLayout>








    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="20dp">

        <include
            android:id="@+id/footer"
            layout="@layout/register_page_footer" />

    </LinearLayout>




</LinearLayout>