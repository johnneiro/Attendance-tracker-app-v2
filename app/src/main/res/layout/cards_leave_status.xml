<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/leave_status_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="4dp"
    android:background="@drawable/mcc_rectangle_shape_corners_7dp"
    android:backgroundTint="@color/green"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/leave_status_card_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/barlow_semibold"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/leave_status_card_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:fontFamily="@font/barlow_regular"
                android:text="Date" />
        </LinearLayout>

        <TextView
            android:id="@+id/leave_status_card_status_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:textColor="@color/white"
            android:text="Accepted"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>