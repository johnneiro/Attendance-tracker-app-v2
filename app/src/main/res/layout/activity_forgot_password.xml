<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ForgotPassword"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/mcc_rectangle_shape_corners_18dp"
        app:backgroundTint="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-80dp">

        <TextView
            android:id="@+id/forgotPassBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fa_solid"
            android:text="\uf060"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="40dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/barlow_bold"
                android:text="UIP Attendance Tracker"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/mcc_circle_shape"
            android:tint="@color/sky"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/mcc_forgot_password_undraw"
            android:layout_gravity="center"
            android:layout_marginTop="-250dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORGOT\nPASSWORD?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/barlow_bold"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:layout_marginTop="-40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the email address associated\nwith your account"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/barlow_regular"
            android:textSize="14sp"
            android:textColor="@color/gray"/>

        <!-- EMAIL INPUT TEXT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/pink"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"/>
            </LinearLayout>

            <EditText

                android:background="@drawable/mcc_rectange_shape_corners_5dp"
                android:id="@+id/tbxEmail"
                android:layout_width="350dp"
                android:layout_height="47dp"
                android:hint="example@gmail.com"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_medium"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:drawableEnd="@drawable/ic_envelope_solid"
                android:drawableTint="@color/gray"
                android:layout_gravity="center"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSendCode"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:background="@drawable/mcc_rectangle_shape_corners_7dp"
            app:backgroundTint = "@color/green"
            android:textSize="18sp"
            android:fontFamily="@font/barlow_bold"
            android:text="SEND CODE"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>





    </LinearLayout>



</LinearLayout>