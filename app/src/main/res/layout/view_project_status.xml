<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/mcc_rectangle_shape_corners_18dp"
        app:backgroundTint="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-80dp">

        <TextView
            android:id="@+id/view_project_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fa_solid"
            android:text="\uf060"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="40dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/barlow_bold"
                android:text="PROJECT STATUS"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="50dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Name"
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File Format"
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Assigned"
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Submitted"
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GDrive Link"
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:textColor="@color/gray"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/barlow_regular"
                android:text="Group Meeting"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/file_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/barlow_regular"
                android:text="DOCUMENT"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_ass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/barlow_regular"
                android:text="March 6, 2022"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/barlow_regular"
                android:text="March 8, 2022, 5:11PM"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/barlow_regular"
                android:text="To be checked"
                android:textColor="@color/green"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/g_link"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_bold"
                android:autoLink="web"
                android:text="https://drive.google.com/drive/folders/1VTditIYVvrus8BTD3I1zEon1T0hYXk4O"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/view_project_edit_button"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:background="@drawable/mcc_rectangle_shape_corners_7dp"
        app:backgroundTint = "@color/green"
        android:textSize="18sp"
        android:fontFamily="@font/barlow_bold"
        android:text="EDIT"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/view_project_delete_button"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:background="@drawable/mcc_rectangle_shape_corners_7dp"
        android:backgroundTint="@color/pink"
        app:backgroundTint = "@color/pink"
        android:textSize="18sp"
        android:fontFamily="@font/barlow_bold"
        android:text="DELETE"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>