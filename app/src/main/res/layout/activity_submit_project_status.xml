<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/mcc_rectangle_shape_corners_18dp"
        app:backgroundTint="@color/blue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginBottom="-30dp"
        android:layout_marginTop="-80dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/submit_project_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fa_solid"
            android:text="\uf060"
            android:layout_marginLeft="100dp"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/submit_project_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="-50dp"
            android:fontFamily="@font/barlow_bold"
            android:text="SUBMIT PROJECT"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>



    <!-- TASK NAME INPUT TEXT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Name"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"/>
        </LinearLayout>

        <EditText
            android:id="@+id/submit_project_task_name_textbox"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:background="@drawable/mcc_rectange_shape_corners_5dp"
            android:fontFamily="@font/barlow_medium"
            android:hint="Group Meeting"
            android:paddingStart="15dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Assigned"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"/>
        </LinearLayout>

        <EditText
            android:id="@+id/submit_project_date_assigned"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:background="@drawable/mcc_rectange_shape_corners_5dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawableTint="@color/gray"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/barlow_medium"
            android:hint="yyyy/mm/dd"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="File Format"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="vertical"
            android:layout_gravity="center"
           >

            <Spinner
                android:id="@+id/submit_project_file_format_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="15dp"
                android:background="@drawable/mcc_dropdown_layout"
                android:spinnerMode="dialog" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Drive Link"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"/>
        </LinearLayout>

        <EditText
            android:id="@+id/submit_project_gdrive_textbox"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:background="@drawable/mcc_rectange_shape_corners_5dp"
            android:fontFamily="@font/barlow_medium"
            android:hint="drive.google.com/drive/u/1/folder"
            android:paddingStart="15dp"
            android:textSize="14sp" />
    </LinearLayout>


    <Button
        android:id="@+id/submit_project_button"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/mcc_rectangle_shape_corners_7dp"
        android:fontFamily="@font/barlow_bold"
        android:gravity="center"
        android:text="SUBMIT"
        android:textSize="18sp"
        app:backgroundTint="@color/green" />
    

</LinearLayout>