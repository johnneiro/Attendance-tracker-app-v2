<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:id="@+id/dashboard_announcement_cardview"
    android:elevation="5dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/dashboard_announcement_card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dashboard_announcement_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/barlow_semibold"
                android:text="Title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dashboard_announcement_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/barlow_regular"
                android:text="Date" />

            <TextView
                android:id="@+id/dashboard_announcement_card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/barlow_regular"
                android:layout_marginStart="10dp"
                android:text="Time"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/dashboard_announcement_card_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:fontFamily="@font/barlow_medium"
                android:textSize="24sp"
                android:textColor="@color/gray"
                android:textAlignment="viewEnd"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="SPEAKER"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/barlow_bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/dashboard_announcement_card_speaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="TEST"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/barlow_regular"/>







        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>