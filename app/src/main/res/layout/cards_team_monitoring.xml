<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stateListAnimator="@null"
    android:background="@drawable/mcc_rectangle_shape_corners_7dp"
    android:backgroundTint="@color/green"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:id="@+id/project_status_cardview"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:stateListAnimator="@null">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:stateListAnimator="@null">

            <TextView
                android:id="@+id/team_monitoring_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/barlow_semibold"
                android:text="John Neiro P. Quijano"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/team_monitoring_card_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/barlow_regular"
                android:text="Leader"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/team_monitoring_card_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/barlow_regular"
                android:text="Project-IT-30"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/team_monitoring_card_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/barlow_regular"
                android:text="Active"
                android:textColor="@color/white" />

        </LinearLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:text="Report"
            app:backgroundTint="@color/pink" />


    </LinearLayout>

</androidx.cardview.widget.CardView>